<div class="page-header">
    <h1>{{footballmatch.team1}} - {{footballmatch.team2}} : {{footballmatch.result}}</h1>
</div>
<table class="table table-striped table-hover ">
	<thead>
		<tr>
			<th>Név</th>
			<th>Esemény</th>
			<th>Idő</th>
			<th>Csapat</th>
			<th>Szerkesztés</th>
			<th>Törlés</th>
		</tr>   
	</thead>
	<tbody>
		{{#each playerevents}}
		<tr>
			
				<td>{{name}}</td>
				<td>{{eventcategory}}</td>
				<td>{{eventTime}}</td>
				<td>{{team}}</td>
				<td><a class="btn btn-success" href="/footballmatch/list/{{footballmatch}}/edit/{{id}}">Szerkesztés</a></td>
				<td><a class="btn btn-warning" href="/footballmatch/list/{{footballmatch}}/eventdelete/{{id}}">Törlés</a></td>
		</tr>
		{{/each}}
	</tbody>
</table>

<p><a href="{{footballmatchid}}/new" class="btn btn-success">Új esemény felvitele</a>
<a href="{{footballmatchid}}/confirmdelete" class="btn btn-danger">Focimeccs törlése</a>
<a href="{{footballmatchid}}/edit" class="btn btn-warning">Focimeccs szerkesztése</a></p>