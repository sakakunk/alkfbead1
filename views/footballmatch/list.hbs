 {{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}


<div class="page-header">
    <h1>Aktuális mérkőzések:</h1>
</div>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Időpont</th>
            <th>Státusz</th>
            <th>Hazai csapat</th>
            <th>Vendég csapat</th>
            <th>Eredmény</th>
            <th>Megtekintés</th>
        </tr>   
    </thead>
    <tbody>
        {{#each footballmatches}}
        <tr>
            <td>{{formattedDate}}</td>
            <td>{{status}}</td>
            <td>{{team1}}</td>
            <td>{{team2}}</td>
            <td>{{result}}</td>
            <td><a class="btn btn-warning" href="/footballmatch/list/{{id}}">Megtekintés</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>

<p><a href="/footballmatch/new" class="btn btn-success">Új focimeccs felvitele</a></p>