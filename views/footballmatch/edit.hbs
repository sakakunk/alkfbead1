
{{#each errorMessages}}
<div class="alert alert-dismissible alert-danger">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
	<h1>Új meccs bevitele</h1>
</div>

<form class="form-horizontal" method="post" data-toggle="validator">
	<fieldset>
		<div class="form-group
			{{#if validationErrors.csapat1}}
				has-error
			{{/if}}
		">
			<label for="csapat1" class="col-lg-2 control-label">Hazai csapat</label>
			<div class="col-lg-10">
				<input class="form-control" id="csapat1" name="csapat1"  type="text" value="{{footballmatch.team1}}">
				{{#if validationErrors.csapat1}}
					<span class="help-block">{{validationErrors.csapat1.msg}}</span>
				{{/if}}
				<div class="help-block with-errors"></div>
			</div>
		</div>
		
		<div class="form-group
			{{#if validationErrors.csapat2}}
				has-error
			{{/if}}
		">
			<label for="csapat2" class="col-lg-2 control-label">Vendég csapat</label>
			<div class="col-lg-10">
				<input class="form-control" id="csapat2" name="csapat2"  type="text" value="{{footballmatch.team2}}">
				{{#if validationErrors.csapat2}}
					<span class="help-block">{{validationErrors.csapat2.msg}}</span>
				{{/if}}
				<div class="help-block with-errors"></div>
			</div>
		</div>
		
		<div class="form-group
			{{#if validationErrors.eredmeny}}
				has-error
			{{/if}}
		">
			<label for="eredmeny" class="col-lg-2 control-label">Eredmény</label>
			<div class="col-lg-10">
				<input class="form-control" id="eredmeny" name="eredmeny"  type="text" value="{{footballmatch.result}}">
				{{#if validationErrors.eredmeny}}
					<span class="help-block">{{validationErrors.eredmeny.msg}}</span>
				{{/if}}
				<div class="help-block with-errors"></div>
			</div>
		</div>
		
		<div class="form-group
			{{#if dateError}}
				has-error
			{{/if}}
		">
			<label for="starttime" class="col-lg-2 control-label">Kezdési időpont</label>
			<div class="col-lg-10">
				
				<input class="form-control" id="starttime" name="starttime"  type="text" placeholder="Formátum: 2015-11-08 15:48" value="{{footballmatch.starttime}}">
				<!--<span class="help-block">Meg kell adni a helyszínt, ha pedig konkrét géppel van probléma, akkor azt is.</span> -->
				{{#if dateError}}
					<span class="help-block">{{validationErrors.starttime.msg}}</span>
				{{/if}}
				<div class="help-block with-errors"></div>
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-lg-10 col-lg-offset-2">
				<!--<button type="reset" class="btn btn-default">Cancel</button> -->
				<button type="submit" class="btn btn-primary">Küldés</button>
			</div>
		</div>
	</fieldset>
</form>